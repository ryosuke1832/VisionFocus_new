<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisionFocus.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="VisionFocus"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="カメラアプリケーション"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <!-- 撮影した画像を表示 -->
            <Image
                x:Name="CapturedImage"
                HeightRequest="300"
                Aspect="AspectFit"
                IsVisible="False"
                Margin="0,20,0,0" />

            <!-- カメラボタン（埋め込み） -->
            <Button
                x:Name="CameraBtn"
                Text="📷 カメラを起動（埋め込み）"
                Clicked="OnCameraClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#512BD4"
                TextColor="White" />

            <!-- ギャラリーボタン -->
            <Button
                x:Name="GalleryBtn"
                Text="🖼️ ギャラリーから選択"
                Clicked="OnGalleryClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#2B0B98"
                TextColor="White" />

            <!-- ステータスラベル -->
            <Label
                x:Name="StatusLabel"
                Text=""
                HorizontalOptions="Center"
                TextColor="#6E6E6E"
                FontSize="14"
                Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisionFocus.CameraPage"
             Title="Camera">
    <Grid RowDefinitions="Auto, *, Auto" Padding="20">
        <!-- Title -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Label Text="Real-time Camera"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1" />
            <Label Text="Camera Preview"
                   Style="{StaticResource SubHeadline}"
                   SemanticProperties.HeadingLevel="Level2" />
        </VerticalStackLayout>
        <!-- Camera Preview -->
        <Border Grid.Row="1"
                BackgroundColor="Black"
                StrokeThickness="0"
                Margin="0,0,0,20">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Grid>
                <!-- Camera Image -->
                <Image x:Name="CameraPreview"
                       Aspect="AspectFit"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill" />
                <!-- Status Display -->
                <Label x:Name="StatusLabel"
                       Text="Please start the camera"
                       TextColor="White"
                       BackgroundColor="#80000000"
                       Padding="10"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="18" />
            </Grid>
        </Border>
        <!-- Control Buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="*, *, *" ColumnSpacing="10">
            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Text="← Back"
                    Clicked="OnBackClicked"
                    BackgroundColor="#757575"
                    TextColor="White"
                    HeightRequest="50"
                    FontSize="16" />
            <Button x:Name="StartButton"
                    Grid.Column="1"
                    Text="📷 Start"
                    Clicked="OnStartClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    HeightRequest="50"
                    FontSize="16" />
            <Button x:Name="StopButton"
                    Grid.Column="2"
                    Text="⏹ Stop"
                    Clicked="OnStopClicked"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    HeightRequest="50"
                    FontSize="16"
                    IsEnabled="False" />
        </Grid>
    </Grid>
</ContentPage>
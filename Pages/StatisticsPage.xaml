<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ScottPlot="clr-namespace:ScottPlot.Maui;assembly=ScottPlot.Maui"
             x:Class="VisionFocus.StatisticsPage"
             Title="Focus Statistics">

    <Grid RowDefinitions="Auto, *" Padding="20">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Padding="0,0,0,20">
            <Button Grid.Column="0"
                    Text="â†"
                    Clicked="OnBackClicked"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                    FontSize="32"
                    WidthRequest="50"
                    HeightRequest="50"
                    Padding="0" />
        </Grid>

        <!-- Content Area -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="20">

                <!-- Filters -->
                <Frame Padding="10" CornerRadius="10" BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#333}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Select Subject:" FontAttributes="Bold" />
                        <Picker x:Name="SubjectPicker"
                                SelectedIndexChanged="OnSubjectChanged"
                                Title="Choose subject" />

                        <Label Text="Select Date:" FontAttributes="Bold" />
                        <DatePicker x:Name="DatePickerFilter"
                                    DateSelected="OnDateSelected" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Charts -->
                <Label Text="Focus Trend Over Time"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <VerticalStackLayout x:Name="ChartsContainer"
                                     Spacing="30">
                    <!-- Multiple ScottPlot charts will be added here dynamically -->
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
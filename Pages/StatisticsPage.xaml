<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ScottPlot="clr-namespace:ScottPlot.Maui;assembly=ScottPlot.Maui"
             x:Class="VisionFocus.StatisticsPage"
             Title="Focus Statistics">

    <Grid RowDefinitions="Auto, *" Padding="20">
        <!-- Header with Back Button -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Padding="0,0,0,20">
            <Button Grid.Column="0"
                    Text="â†"
                    Clicked="OnBackClicked"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                    FontSize="32"
                    WidthRequest="50"
                    HeightRequest="50"
                    Padding="0" />
        </Grid>

        <!-- Content Area -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10"
                                 Spacing="25">

                <!-- Line Plot Section -->
                <Label Text="Focus Trend Over Time"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <ScottPlot:MauiPlot x:Name="LinePlot"
                                    HeightRequest="400"
                                    WidthRequest="700" />

                <!-- Bar Plot Section -->
                <Label Text="Average Eye Closures by Subject"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0" />

                <ScottPlot:MauiPlot x:Name="BarPlot"
                                    HeightRequest="300"
                                    WidthRequest="650" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>

